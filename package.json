{
	"name": "dota2-coding-helper",
	"displayName": "Dota2 Coding Helper",
	"description": "View some Dota2 custom game document",
    "version": "0.0.2",
    "publisher": "robincode",
    "icon": "media/logo.png",
	"engines": {
		"vscode": "^1.44.0"
    },
    "repository": {
        "url": "https://github.com/RobinCodeX/dota2-coding-helper"
    },
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:dota2CodingHelper.luaServerAPI",
        "onCommand:dota2CodingHelper.luaClientAPI",
        "onCommand:dota2CodingHelper.jsAPI"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "dota2CodingHelper.luaServerAPI",
				"title": "Lua Server API",
				"category": "Dota2 Coding Helper"
			},
			{
				"command": "dota2CodingHelper.luaClientAPI",
				"title": "Lua Client API",
				"category": "Dota2 Coding Helper"
            },
            {
				"command": "dota2CodingHelper.jsAPI",
				"title": "Javascript API",
				"category": "Dota2 Coding Helper"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"task": "gulp"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"cheerio": "^1.0.0-rc.3",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"gulp": "^4.0.2",
		"gulp-cli": "^2.2.0",
		"mocha": "^7.1.1",
		"request": "^2.88.2",
		"request-promise": "^4.2.5",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
